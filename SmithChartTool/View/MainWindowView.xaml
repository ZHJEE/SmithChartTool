<Window x:Class="SmithChartTool.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:SmithChartTool.View"
        xmlns:vm="clr-namespace:SmithChartTool.ViewModel"
        Title="SmithChartTool PREVIEW! NOT FOR DISTRIBUTION!" Height="600" Width="800" MinWidth="800" MinHeight="600">
    
    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
				<MenuItem Header="_Save project"></MenuItem>
				<MenuItem Header="_Open project" Command="vm:MainWindowViewModel.CommandXYAsync"></MenuItem>
				<MenuItem Header="_Exit"></MenuItem>
            </MenuItem>
			<MenuItem Header="_Insert"></MenuItem>
			<MenuItem Header="_View"></MenuItem>
            <MenuItem Header="_Help"></MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button>A</Button>
        </ToolBar>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
				<ColumnDefinition Width="200" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="200" />
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <TextBox x:Name="tbFrequency"></TextBox>
                <CheckBox>
                    <CheckBox.IsChecked>
                        <Binding Path="bli" ConverterParameter="21">
                            <Binding.Converter>
                                <vm:BooleanInvertConverter>

                                </vm:BooleanInvertConverter>
                            </Binding.Converter>
                        </Binding>
                    </CheckBox.IsChecked>
                </CheckBox>
                <Button x:Name="executeSync" Margin="10" Padding="10" Content="Normal Execute">
					<Button.IsEnabled>
						<Binding Path="bli" ConverterParameter="22">
							<Binding.Converter>
								<vm:BooleanInvertConverter>
								</vm:BooleanInvertConverter>
							</Binding.Converter>
						</Binding>
					</Button.IsEnabled>
				</Button>
				<Button x:Name="executeAsync" Margin="10" Padding="10" IsEnabled="{Binding Path=bli}">Async Execute</Button>
				<Button x:Name="executeParallelAsync" Margin="10" Padding="10" Command="vm:MainWindowViewModel.CommandXYAsync" IsEnabled="{Binding Path=bli}">Parallel Async Execute</Button>
			</StackPanel>
			<oxy:PlotView Grid.Column="1" Model="{Binding MyFirstPlot}" Height="116"/>
            <Expander IsExpanded="True" Grid.Column="2" ExpandDirection="Left">
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="0,0,0,10"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Value"></Label>
                            <TextBox Grid.Column="1"  x:Name="tbValue"></TextBox> 
                            <Button Grid.Column="0" Content="Apply"></Button>
                            <Button Grid.Column="0" Content="Apply"></Button>
                            <Button Grid.Column="0" Content="Apply"></Button>
                        </Grid>
                        
                    </StackPanel>
                </ScrollViewer>
            </Expander>
            

        </Grid>
    </DockPanel>
</Window>
