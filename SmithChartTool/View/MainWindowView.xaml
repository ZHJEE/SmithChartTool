<Window x:Class="SmithChartTool.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:SmithChartTool.View"
        xmlns:vm="clr-namespace:SmithChartTool.ViewModel"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Save">
                    <MenuItem Header="_All" Command="vm:MainWindowViewModel.CommandXYAsync">

                     
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Open"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Help"></MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button>Blub</Button>
        </ToolBar>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Margin="10 0" FontSize="28">
            Simple Async Demo App
            </TextBlock>
            <Button x:Name="executeSync" Grid.Row="2" Margin="10" Padding="10">
                <Button.IsEnabled>
                    <Binding Path="bli" ConverterParameter="22">
                        <Binding.Converter>
                            <vm:BooleanInvertConverter>

                            </vm:BooleanInvertConverter>
                        </Binding.Converter>
                    </Binding>
                </Button.IsEnabled>
                Normal Execute
            </Button>
            <Button x:Name="executeAsync" Grid.Row="3" Margin="10" Padding="10" IsEnabled="{Binding Path=bli}">Async Execute</Button>
            <Button x:Name="executeParallelAsync" Grid.Row="4" Margin="10" Padding="10" Command="vm:MainWindowViewModel.CommandXYAsync" IsEnabled="{Binding Path=bli}">Parallel Async Execute</Button>
            
            <ScrollViewer Grid.Row="5">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,0,10"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <oxy:PlotView Model="{Binding MyFirstPlot}" Height="113"/>
                    <CheckBox>
                        <CheckBox.IsChecked>
                            <Binding Path="bli" ConverterParameter="21">
                                <Binding.Converter>
                                    <vm:BooleanInvertConverter>

                                    </vm:BooleanInvertConverter>
                                </Binding.Converter>
                            </Binding>
                        </CheckBox.IsChecked>
                    </CheckBox>
                    <RadioButton x:Name="rbArsch" />
                    <oxy:Plot Title="{Binding Title}">
                        <oxy:Plot.Series>
                            <oxy:LineSeries ItemsSource="{Binding Points}"/>
                        </oxy:Plot.Series>
                    </oxy:Plot>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </DockPanel>
</Window>
