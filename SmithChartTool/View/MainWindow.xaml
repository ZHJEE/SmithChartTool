<Window x:Class="SmithChartTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:SmithChartTool"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Save">
                    <MenuItem Header="_All" Command="local:ViewModel.MainWindowViewModel.CommandXYAsync">

                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Open"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Help"></MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button>Blub</Button>
        </ToolBar>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Margin="10 0" FontSize="28">
            Simple Async Demo App
            </TextBlock>
            <Button x:Name="executeSync" Grid.Row="2" Margin="10" Padding="10" Click="executeSync_Click">
                <Button.IsEnabled>
                    <Binding Path="bli" ConverterParameter="22">
                        <Binding.Converter>
                            <local:ViewModel.BooleanInvertConverter>

                            </local:ViewModel.BooleanInvertConverter>
                        </Binding.Converter>
                    </Binding>
                </Button.IsEnabled>
                Normal (Sync) Execute
            </Button>
            <Button x:Name="executeAsync" Grid.Row="3" Margin="10" Padding="10" Click="executeAsync_Click" IsEnabled="{Binding Path=bli}">Async Execute</Button>
            <Button x:Name="executeParallelAsync" Grid.Row="4" Margin="10" Padding="10" Command="local:ViewModel.MainWindowViewModel.CommandXYAsync" IsEnabled="{Binding Path=bli}">Parallel Async Execute</Button>
            <TextBlock x:Name="resultsWindow" Grid.Row="5" Margin="10"/>
            <ScrollViewer Grid.Row="6">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,0,10"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <CheckBox>
                        <CheckBox.IsChecked>
                            <Binding Path="bli" ConverterParameter="21">
                                <Binding.Converter>
                                    <local:BooleanInvertConverter>

                                    </local:BooleanInvertConverter>
                                </Binding.Converter>
                            </Binding>
                        </CheckBox.IsChecked>
                    </CheckBox>
                    <RadioButton x:Name="rbArsch" />
                    <oxy:Plot Title="{Binding Title}">
                        <oxy:Plot.Series>
                            <oxy:LineSeries ItemsSource="{Binding Points}"/>
                        </oxy:Plot.Series>
                    </oxy:Plot>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </DockPanel>
</Window>
